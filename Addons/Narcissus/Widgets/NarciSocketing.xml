	<Frame name="Narci_ItemSocketing" inherits="Narci_ItemSocketing_Template">
		<Layers>
			<Layer level="OVERLAY">
				<FontString inherits="NarciTooltipDescriptionFontRegularWhite" parentKey="Tooltip" Alpha="0">
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent" relativePoint="TOP" y="4"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="animIn" smoothing="IN_OUT">
							<Alpha fromAlpha="0" toAlpha="1" duration="0.25" order="1"/>
							<Alpha fromAlpha="1" toAlpha="1" duration="3" order="2"/>
							<Alpha fromAlpha="1" toAlpha="0" duration="2" order="3"/>
						</AnimationGroup>
					</Animations>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="ClickToClose">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="-100" y="100"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="100" y="-100"/>
				</Anchors>
				<Scripts>
					<OnShow>
						self:SetFrameLevel((self:GetParent():GetFrameLevel() or 1) -1);
					</OnShow>
					<OnClick function="Narci_ItemSocketing_Close"/>
				</Scripts>
			</Button>
		</Frames>
		<Animations>
			<AnimationGroup parentKey="animIn" smoothing="IN_OUT">
				<Translation parentKey="Translation" offsetY="8" duration="0" order="1"/>
				<Alpha fromAlpha="0" toAlpha="1" duration="0.15" order="2"/>
				<Translation parentKey="Translation" offsetY="-8" duration="0.2" order="2"/>
			</AnimationGroup>
		</Animations>
        <Scripts>
            <OnLoad>
				self.Tooltip:SetText(Narci.L["Item Socketing Tooltip"]);
            </OnLoad>
			<OnHide>
				self:Hide();
				self:StopAnimating();
				self:UnregisterEvent("SOCKET_INFO_SUCCESS");
				self:UnregisterEvent("SOCKET_INFO_FAILURE");
				self:UnregisterEvent("UI_ERROR_MESSAGE");
				if not Narci_ItemSocketing_GemFrame.Bling.FadeOut:IsPlaying() then
					Narci_ItemSocketing_GemFrame:Hide();
				end
			</OnHide>
			<OnShow>
				self:StopAnimating();
				self.animIn:Play();
				self:RegisterEvent("SOCKET_INFO_SUCCESS");
				self:RegisterEvent("SOCKET_INFO_FAILURE");
			</OnShow>
			<OnEvent>
				if event == "SOCKET_INFO_SUCCESS" then
					Narci_ItemSocketing_Succeed()
					CloseSocketInfo();
				elseif event == "SOCKET_INFO_FAILURE" then
					CloseSocketInfo();
				else
					local _, msg = ...
					Narci_AlertFrame_Autohide:AddMessage(msg, true);
				end
				self:UnregisterEvent("UI_ERROR_MESSAGE");
			</OnEvent>
        </Scripts>
	</Frame>

